<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_colores"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context=".TablaJugadoresActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="30"
        android:fontFamily="@font/bangers"
        android:text="TABLA DE JUGADORES"
        android:textAlignment="center"
        android:textColor="#4E2A0E"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="30"
        android:orientation="horizontal"
        android:weightSum="100">

        <EditText
            android:id="@+id/editext_buscar_dni_db"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:hint="DNI a buscar..."
            android:inputType="number"
            android:maxLength="8"
            android:textColorHint="#6E000000"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/button_search_bd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="70"
            android:background="@android:drawable/ic_menu_search" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="30"
        android:background="@drawable/button_blue_rounded"
        android:orientation="horizontal"
        android:weightSum="100">

        <Spinner
            android:id="@+id/spinner_orden_db"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="50"
            android:textAlignment="center"
            tools:visibility="visible" />

        <Button
            android:id="@+id/button_order_data_db"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="50"
            android:background="@drawable/buttons_tic_tac_toe"
            android:fontFamily="@font/bangers"
            android:text="ORDER  DATA"
            android:textSize="24sp" />
    </LinearLayout>

    <ListView
        android:id="@+id/listview_tabla_bd"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_weight="10"
        android:divider="@color/common_google_signin_btn_text_dark_focused" />


</androidx.appcompat.widget.LinearLayoutCompat>